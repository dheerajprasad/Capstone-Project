<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ZodiacCardView"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"

    android:layout_height="80dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ZodiacSignImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/capricorn"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="2">

            <TextView
                android:id="@+id/ZodiacSignname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:text="@string/capricorn"/>
            <TextView
                android:id="@+id/Zodiactimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/theme_accent"
                android:textSize="16sp"
                android:text="@string/capricorntimeline"/>
            <TextView
                android:id="@+id/Zodiacfortime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Horoscope from 10/5/2015 to 10/11/2015 "/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>