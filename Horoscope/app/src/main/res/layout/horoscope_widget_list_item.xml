<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@drawable/list_item"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"


                android:src="@drawable/ariessmall"
                android:id="@+id/zodia_img_widget"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:textAlignment="center"
                android:layout_weight="2"
                android:textSize="@dimen/widgetheading"


                android:text="Horoscope for day 04/10/2014"
                android:textColor="@color/indigo_300"
                android:id="@+id/zodiac_title_widget"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:textSize="@dimen/widgetdesc"

            android:text="You stir the soup, vacuum the carpet and tend to the children -- all without missing a beat. Not only are you getting everything done, but you get it done with style. You are on a roll, and if you find yourself alone these days, it could be because other people are having trouble keeping up with you. If you take your time and exercise a little patience, who knows what can happen?."
            android:textColor="@color/abc_search_url_text_normal"
            android:id="@+id/zodiac_desc_widget"/>
    </LinearLayout>
</LinearLayout>


